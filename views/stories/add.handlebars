<h1>Add story</h1>
<div class="row">
    <form action="/stories" method="POST" class="col s12">
        <div class="row">
            <div class="input-field">
                <input type="text" name="title">
                <label for="title">Title</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <select name="status">
                    <option value="public">Public</option>
                    <option value="private">Private</option>
                    <option value="unpublished" selected>Unpublished</option>
                </select>
                <label for="status">Private status</label>
            </div>
        </div>
        <div class="row">
            <p>
                <input type="checkbox" name="allowComents" class="filled-in" id="filled-in-box" checked="checked">
                <label for="filled-in-box">Allow comments</label>
            </p>
        </div>
        <div class="row">
            <div class="input-field">
                <h5>Your story</h5>
                <textarea name="body"></textarea>
            </div>
        </div>

        <input type="submit" value="save" class="btn">
    </form>
</div>